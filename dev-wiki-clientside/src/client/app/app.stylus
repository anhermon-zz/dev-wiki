main-color = white-color
*
    font-family "Segoe UI", Arial, Helvetica, sans-serif
    -webkit-font-smoothing antialiased

body
    background-color main-color
    overflow hidden
ul
    list-style-type none
    > li
        display list-item
.sample
    transform-origin: center bottom

.container-fluid
    padding-right 0px
    padding-left 0px

//global design for buttons
.btn
    transition all .3s ease-out
    outline none
.btn-primary
    border-radius 2px
    background-color main-color-lighten-1
    border-color main-color-lighten-1
    > i
        color white
    &:hover
        background-color main-color-lighten-2
        border-color main-color-lighten-2

//remove all text decorations
*
    text-decoration none !important
.card
    position relative
    overflow hidden
    margin 0.5rem 0 1rem 0
    background-color #fff
    transition box-shadow .25s
    border-radius 2px
    > div
        margin 10px 40px 10px 40px

.btn-floating, .btn-floating-small
    background-color main-color-lighten-1
    border-color main-color-lighten-1
    border-radius 50%
    padding 0
    vertical-align text-bottom
    color white
    outline none !important
    &:hover
        background-color main-color-lighten-2
        border-color main-color-lighten-3
        color white
    &:visited
        color white

.btn-floating-small
    width 33.3px
    height 33.3px
