gray-darken-2 = #616161;
gray-darken-3 = #424242;
gray-darken-4 = #212121;

.core
    z-index 100
    background-color gray-darken-2
    width 100%
    height 100%
    color #606060

.btn
    margin 5px

*[ui-view]
    &.ng-enter
        animation: fadeIn 1s

*[ui-view]
    &.ng-leave
        animation: fadeOut 1s

*[ui-view=center]
    overflow auto
    padding 20px

*[ui-view=nav] nav
      background-color gray-darken-4
      color #9e9e9e
      width 100%
      position relative
      z-index 600
      box-shadow 0 16px 28px 0 rgba(0, 0, 0, 0.22), 0 25px 55px 0 rgba(0, 0, 0, 0.21)

.centered
    position fixed
    top      50%
    left     50%
    transform translate(-50%, -50%)

.user-widget
    > button
        font-size 15px
        padding 1px 5px
    > span
        font-size 15px
    > *
       vertical-align middle
